<div class="main index">
  <h2>Home Page</h2>

  <%= link_to("Add New Book", books_create_path, class: 'action create') %>

  <table class="listing" summary="book list" style="width: 100%;">
    <tr class="header">
      <th>#</th>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.price %></td>
      <td><%= book.published %></td>
      <td class="actions">
        <%= link_to("Read", show_book_path(book), class: 'action show') %>
        <%= link_to("Update", update_book_path(book), class: 'action edit') %>
        <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>